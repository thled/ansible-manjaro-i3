[includeIf "gitdir:~/Projects/"]
    path = ~/Projects/.gitconfig
[includeIf "gitdir:~/MyProjects/"]
    path = ~/MyProjects/.gitconfig

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld
[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[core]
    excludesfile = ~/.config/git/gitignore

